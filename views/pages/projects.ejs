<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header', {tab: 'projects'}); %>
</header>

<main>
  <div class="jumbotron">
    <h1>Projects</h1>
    <p>This page queries my github profile to show my projects.</p>
    <hr>
    <% for (var i = 0; i < repos.length ; i++) { %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= repos[i].name %></h5>
          <p class="card-text"><%= repos[i].description %></p>
          <a href="<%= repos[i].html_url %>" class="btn btn-primary">View on Github</a>
        </div>
      </div>
    <% } %>
  </div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>